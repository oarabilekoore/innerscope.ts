{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "declaration": true,
        "outDir": "./build",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "droidxl": ["build"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["packages/*.ts", "packages/ui-engine/baseline.css"],
    "exclude": ["node_modules", "build"]
}
